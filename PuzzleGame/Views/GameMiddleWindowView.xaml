<Window x:Class="PuzzleGame.Views.GameMiddleWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Puzzle World!" Height="700" Width="950" Icon="/Resources/MainIcon.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.ColumnSpan="5" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="26" FontFamily="Comic Sans MS Bold" Margin="20 10 20 10">Уровень: средне</TextBlock>
        <TextBlock Grid.ColumnSpan="5" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontFamily="Comic Sans MS" Margin="20 10 20 10">Правила: собери пазл, меняя кусочки местами.</TextBlock>
        <Button Grid.Row="0" Grid.ColumnSpan="5" HorizontalAlignment="Right" Height="60" Width="300"  FontSize="26" FontFamily="Comic Sans MS Bold" Margin="0 20 10 20" Background="Bisque" Command="{Binding ButtonSavedGameCommand}">Сохранить игру</Button>

        <Button Grid.Column="0" Grid.Row="2" Height="130" Width="180" Margin="20 0 0 0" IsEnabled="{Binding IsEnabled[0]}" Command="{Binding ButtonPressedCommand}" CommandParameter="0">
            <Image Source="{Binding Image[0]}"></Image>
        </Button>
        <Button Grid.Column="1" Grid.Row="2" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[1]}" Command="{Binding ButtonPressedCommand}" CommandParameter="1">
            <Image Source="{Binding Image[1]}"></Image>
        </Button>
        <Button Grid.Column="2" Grid.Row="2" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[2]}" Command="{Binding ButtonPressedCommand}" CommandParameter="2">
            <Image Source="{Binding Image[2]}"></Image>
        </Button>
        <Button Grid.Column="3" Grid.Row="2" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[3]}" Command="{Binding ButtonPressedCommand}" CommandParameter="3">
            <Image Source="{Binding Image[3]}"></Image>
        </Button>
        <Button Grid.Column="4" Grid.Row="2" Height="130" Width="180" Margin="0 0 20 0" IsEnabled="{Binding IsEnabled[4]}" Command="{Binding ButtonPressedCommand}" CommandParameter="4">
            <Image Source="{Binding Image[4]}"></Image>
        </Button>

        <Button Grid.Column="0" Grid.Row="3" Height="130" Width="180" Margin="20 0 0 0" IsEnabled="{Binding IsEnabled[5]}" Command="{Binding ButtonPressedCommand}" CommandParameter="5">
            <Image Source="{Binding Image[5]}"></Image>
        </Button>
        <Button Grid.Column="1" Grid.Row="3" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[6]}" Command="{Binding ButtonPressedCommand}" CommandParameter="6">
            <Image Source="{Binding Image[6]}"></Image>
        </Button>
        <Button Grid.Column="2" Grid.Row="3" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[7]}" Command="{Binding ButtonPressedCommand}" CommandParameter="7">
            <Image Source="{Binding Image[7]}"></Image>
        </Button>
        <Button Grid.Column="3" Grid.Row="3" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[8]}" Command="{Binding ButtonPressedCommand}" CommandParameter="8">
            <Image Source="{Binding Image[8]}"></Image>
        </Button>
        <Button Grid.Column="4" Grid.Row="3" Height="130" Width="180" Margin="0 0 20 0" IsEnabled="{Binding IsEnabled[9]}" Command="{Binding ButtonPressedCommand}" CommandParameter="9">
            <Image Source="{Binding Image[9]}"></Image>
        </Button>

        <Button Grid.Column="0" Grid.Row="4" Height="130" Width="180" Margin="20 0 0 0" IsEnabled="{Binding IsEnabled[10]}" Command="{Binding ButtonPressedCommand}" CommandParameter="10">
            <Image Source="{Binding Image[10]}"></Image>
        </Button>
        <Button Grid.Column="1" Grid.Row="4" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[11]}" Command="{Binding ButtonPressedCommand}" CommandParameter="11">
            <Image Source="{Binding Image[11]}"></Image>
        </Button>
        <Button Grid.Column="2" Grid.Row="4" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[12]}" Command="{Binding ButtonPressedCommand}" CommandParameter="12">
            <Image Source="{Binding Image[12]}"></Image>
        </Button>
        <Button Grid.Column="3" Grid.Row="4" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[13]}" Command="{Binding ButtonPressedCommand}" CommandParameter="13">
            <Image Source="{Binding Image[13]}"></Image>
        </Button>
        <Button Grid.Column="4" Grid.Row="4" Height="130" Width="180" Margin="0 0 20 0" IsEnabled="{Binding IsEnabled[14]}" Command="{Binding ButtonPressedCommand}" CommandParameter="14">
            <Image Source="{Binding Image[14]}"></Image>
        </Button>

        <Button Grid.Column="0" Grid.Row="5" Height="130" Width="180" Margin="20 0 0 0" IsEnabled="{Binding IsEnabled[15]}" Command="{Binding ButtonPressedCommand}" CommandParameter="15">
            <Image Source="{Binding Image[15]}"></Image>
        </Button>
        <Button Grid.Column="1" Grid.Row="5" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[16]}" Command="{Binding ButtonPressedCommand}" CommandParameter="16">
            <Image Source="{Binding Image[16]}"></Image>
        </Button>
        <Button Grid.Column="2" Grid.Row="5" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[17]}" Command="{Binding ButtonPressedCommand}" CommandParameter="17">
            <Image Source="{Binding Image[17]}"></Image>
        </Button>
        <Button Grid.Column="3" Grid.Row="5" Height="130" Width="180" Margin="0" IsEnabled="{Binding IsEnabled[18]}" Command="{Binding ButtonPressedCommand}" CommandParameter="18">
            <Image Source="{Binding Image[18]}"></Image>
        </Button>
        <Button Grid.Column="4" Grid.Row="5" Height="130" Width="180" Margin="0 0 20 0" IsEnabled="{Binding IsEnabled[19]}" Command="{Binding ButtonPressedCommand}" CommandParameter="19">
            <Image Source="{Binding Image[19]}"></Image>
        </Button>
    </Grid>
</Window>
