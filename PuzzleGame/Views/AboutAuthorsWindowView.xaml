        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Об авторах" Height="180" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="18" HorizontalAlignment="Center" Margin="10">Игру "Паззлы" для вас склепали:</TextBlock>
        <TextBlock Grid.Row="1" FontSize="16" HorizontalAlignment="Center">Репецкая Татьяна</TextBlock>
        <TextBlock Grid.Row="2" FontSize="16" HorizontalAlignment="Center">Рязанов Игорь</TextBlock>
        <TextBlock Grid.Row="3" FontSize="16" HorizontalAlignment="Center">Позднышева Софья</TextBlock>
    </Grid>
</Window>
